{
    "task": "GLUE",
    "attention_probs_dropout_prob": 0.1,
    "hidden_act": "gelu",
    "hidden_dropout_prob": 0.1,
    "hidden_size": 768,
    "initializer_range": 0.02,
    "intermediate_size": 3072,
    "max_position_embeddings": 512,
    "vocab_size": 30528,
    "num_attention_heads": 12,
    "num_hidden_layers": 12,
    "type_vocab_size": 2,
    "seq_length": 384,
    "use_attention_projection_bias": true,
    "use_cls_layer": false,
    "pipeline_stages": [
     ["emb", "pos"],
     ["hid", "hid", "hid", "hid"],
     ["hid", "hid", "hid", "hid"],
     ["hid", "hid", "hid", "hid"],
     ["glu"]],
    "device_mapping":[0,1,2,3,0],
    "micro_batch_size": 1,
    "batches_per_step": 1,
    "epochs": 3,
    "epsilon": 0.000001,
    "lr_schedule": "polynomial_decay",
    "base_learning_rate": 1e-5,
    "warmup": 0.1,
    "loss_scaling": 1,
    "optimizer": "mpadamw",
    "beta1": 0.9,
    "beta2": 0.999,
    "gradient_accumulation_count": 30,
    "pipeline_schedule": "Grouped",
    "replicas": 1,
    "partials_type":"half",
    "reduction_type": "mean",

    "precision": "16",
    "seed": 7801,
    "steps_per_ckpts": 10000,
    "steps_per_logs": 1,
    "weight_decay_rate": 0.01,
    "available_memory_proportion": 0.15,
    "parallel_io_threads": 16,
    "matmul_serialize_factor":6,
    "duplicate_factor":5,
    "no_outlining": false,
    "stochastic_rounding": true,
    "enable_recomputation": true,
    "fp_exceptions": false,

    "init_checkpoint": "",

    "steps_per_tensorboard": -1,
    "static_mask": false, 
    "buffer_size": 3700,
    "glue_dropout_prob": 0.15,
    "do_training": false,
    "do_predict": false,
    "do_evaluation": false,
    "do_lower_case": true,
    "verbose_logging": false,
    "variable_offloading": true,

    "output_dir": "tmp/groupbert/glue/",
    "save_path": "./checkpoint/glue",
    "vocab_file": "./data/ckpts/uncased_L-12_H-768_A-12/vocab.txt",

    "groupbert_conv_group_size": 16,
    "use_debiasing": true,
    "groupbert": true,
    "groupbert_conv_kernel_size": 7,
    "groupbert_ffn_output_groups": 4
}

