{
    "task": "SQUAD",
    "num_layers": 12,
    "encoder_start_ipu": 1,
    "layers_per_ipu": [4, 4, 4],
    "hidden_size": 768,
    "attention_heads": 12,
    "sequence_length": 384,
    "vocab_length": 30400,
    "popart_dtype": "FLOAT16",
    "no_dropout": false,
    "stochastic_rounding": true,
    "enable_half_partials": true,
    "batches_per_step": 4,
    "epochs": 2,
    "epochs_per_save": 1,
    "steps_per_save": 512,
    "steps_per_log": 100,
    "aggregate_metrics_over_steps": 1,
    "loss_scaling": 64.0,
    "micro_batch_size": 2,
    "global_batch_size": 32,
    "replication_factor": 1,
    "optimizer_state_offchip": false,
    "replicated_tensor_sharding": true,
    "gradient_reduction_type": "Mean",
    "optimizer": "ADAM_NO_BIAS",
    "beta1": 0.9,
    "beta2": 0.999,
    "weight_decay": 1e-2,
    "learning_rate_function": "Linear",
    "learning_rate": 3e-05,
    "lr_warmup_steps": 138,
    "lr_steps_per_decay_update": 4,
    "input_files": [
        "data/squad/train-v1.1.json"
    ],
    "vocab_file": "data/ckpts/uncased_L-12_H-768_A-12/vocab.txt",
    "do_lower_case": true,
    "shuffle": true,
    "available_memory_proportion": [0.40],
    "execution_mode": "PIPELINE",
    "checkpoint_dir": "ckpts/mk2/squad_large",
    "validation_config": {
        "batches_per_step": 10,
        "steps_per_log": 200,
        "input_files": [
            "data/squad/dev-v1.1.json"
        ],
        "squad_results_dir": "data/squad/results",
        "squad_evaluate_script": "data/squad/evaluate-v1.1.py",
        "no_drop_remainder": true
    }
}
