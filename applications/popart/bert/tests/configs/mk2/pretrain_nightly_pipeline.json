{
    "task": "PRETRAINING",
    "num_layers": 2,
    "encoder_start_ipu": 1,
    "layers_per_ipu": [2],
    "hidden_size": 768,
    "attention_heads": 2,
    "sequence_length": 32,
    "mask_tokens": 2,
    "vocab_length": 240,
